<section>
    <div class="container mt-5">
        <div class="row">
            {{#each products}}

            <div class="col-md-3 p-3">
                <div class="card" style="width:15rem; height:24rem">
                    <img class="card-img-top"
                        src = "/product-images/{{this.product._id}}.jpg"
                        alt="Card image cap"
                        style="height: 12rem;">
                    <div class="card-body">
                        <h5 class="card_title">{{this.product.Name}}</h5>
                        <h5 class="card_text">Rs.{{this.product.Price}}</h5>
                        <h5 class="card_text">Quantity : {{this.quantity}}</h5>
                        <h5 class="card_text">{{this.Description}}</h5>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</section>