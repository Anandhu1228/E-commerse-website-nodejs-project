<section>
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-center">Edit Info</h2>
                <form action="/superadmin/updatesuperinfo/{{superAdmin._id}}" method="POST" enctype="multipart/form-data">

                    <label for="">Email</label>
                    <input type="email" name="Email" class="form-control" value="{{user.Email}}">

                    <label for="">Old Password</label>
                    <input type="password" name="OldPass" class="form-control">

                    <label for="">Secret Key</label>
                    <input type="password" name="SKEY" class="form-control">

                    <label for="">New Password</label>
                    <input type="password" name="NewPass" class="form-control">

                    <button type="submit" class="btn btn-warning mt-4">Submit</button>
                    <button type="reset" class="btn btn-warning mt-4">Reset</button>
                    <a href="/superadmin/viewadmin" class="btn btn-danger mt-4">Cancel</a>
                    <p style="font-size: small;">"current page won't get redirected to login page if provided older password and key was wrong</p>
                </form>
            </div>
        </div>
    </div>
</section>
