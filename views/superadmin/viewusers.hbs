<section>
    <div class="container">
        
        <table class="table mt-5">
            <thead>
                <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">contact No.</th>
                <th scope="col">Image</th>
                </tr>
            </thead>
            <tbody>
                {{#each users}}
                <tr>
                <th scope="row">{{@index}}</th>
                <td>{{this.Name}}</td>
                <td>{{this.Email}}</td>
                <td>{{this.Contact}}</td>
                <td><img style="width: 50px;" src="/user-images/{{this._id}}.jpg" alt=""></td>
                <td><a href="/superadmin/deleteuser/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>