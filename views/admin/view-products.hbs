<section>
    <div class="container">
        <div class="row mt-4">
            <nav class="navbar navbar-light bg-link">
                <form class="form-inline">
                    <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
                </form>
                </nav>
            <a href="/admin/add-product" class="btn btn-primary ml-auto" style="height: 40px;" >Add Product</a>
        </div>
        <table class="table mt-5" id = "productTable">
            <thead>
                <tr>
                <th scope="col">No</th>
                <th scope="col">Title</th>
                <th scope="col">Category</th>
                <th scope="col">Descreption</th>
                <th scope="col">Price</th>
                <th scope="col">Image</th>
                <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                <th scope="row">1</th>
                <td>{{this.Name}}</td>
                <td>{{this.Category}}</td>
                <td>{{this.Description}}</td>
                <td>{{this.Price}}</td>
                <td><img style="width: 50px;" src="/product-images/{{this._id}}.jpg" alt=""></td>
                <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>
                <td><a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}} ?')">Delete</a></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>
<script>
   $(document).ready(function() {
      $("#productTable").DataTable();
   });
</script>